<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ðŸƒ Animal Crossing Cozy Island Theme ðŸŒ´ -->
    <style name="Theme.IceCreamShop" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary colors - Nook's Cranny Green -->
        <item name="colorPrimary">@color/icecream_primary</item>
        <item name="colorPrimaryVariant">@color/icecream_primary_dark</item>
        <item name="colorOnPrimary">@color/icecream_text_light</item>
        
        <!-- Secondary/Accent colors - Bell Coin Gold -->
        <item name="colorSecondary">@color/icecream_accent</item>
        <item name="colorSecondaryVariant">@color/icecream_accent_dark</item>
        <item name="colorOnSecondary">@color/icecream_text_light</item>
        
        <!-- Background colors - Warm Cream -->
        <item name="android:colorBackground">@color/icecream_background</item>
        <item name="colorSurface">@color/icecream_surface</item>
        <item name="colorOnSurface">@color/icecream_text_dark</item>
        
        <!-- Error color - Soft Coral -->
        <item name="colorError">@color/icecream_error</item>
        <item name="colorOnError">@color/icecream_text_light</item>
        
        <!-- Status bar - Cozy Sky -->
        <item name="android:statusBarColor">@color/icecream_primary</item>
        <item name="android:navigationBarColor">@color/icecream_background</item>
        
        <!-- Window settings -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Shape appearance for rounded corners -->
        <item name="shapeAppearanceSmallComponent">@style/CozyShapeAppearance.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/CozyShapeAppearance.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/CozyShapeAppearance.Large</item>
    </style>

    <!-- Ice Cream Shop Theme with ActionBar -->
    <style name="Theme.IceCreamShop.ActionBar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/icecream_primary</item>
        <item name="colorPrimaryVariant">@color/icecream_primary_dark</item>
        <item name="colorOnPrimary">@color/icecream_text_light</item>
        
        <!-- Secondary/Accent colors -->
        <item name="colorSecondary">@color/icecream_accent</item>
        <item name="colorSecondaryVariant">@color/icecream_accent_dark</item>
        <item name="colorOnSecondary">@color/icecream_text_light</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/icecream_background</item>
        <item name="colorSurface">@color/icecream_surface</item>
        <item name="colorOnSurface">@color/icecream_text_dark</item>
        
        <!-- Error color -->
        <item name="colorError">@color/icecream_error</item>
        <item name="colorOnError">@color/icecream_text_light</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/icecream_primary_dark</item>
    </style>
    
    <!-- Cozy Shape Appearances - Extra Rounded for that Bubbly Feel -->
    <style name="CozyShapeAppearance.Small" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <style name="CozyShapeAppearance.Medium" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>
    
    <style name="CozyShapeAppearance.Large" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">32dp</item>
    </style>
    
    <!-- Cozy Button Style - Rounded Pill Shape -->
    <style name="CozyButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/icecream_text_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/icecream_primary</item>
        <item name="cornerRadius">24dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/icecream_primary_dark</item>
    </style>
    
    <style name="CozyButton.Accent">
        <item name="backgroundTint">@color/icecream_accent</item>
        <item name="strokeColor">@color/icecream_accent_dark</item>
    </style>
    
    <style name="CozyButton.Small">
        <item name="android:minHeight">36dp</item>
        <item name="android:textSize">12sp</item>
        <item name="cornerRadius">18dp</item>
    </style>
    
    <!-- Cozy Card Style -->
    <style name="CozyCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/icecream_surface</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/icecream_sand</item>
    </style>
    
    <!-- Cozy Text Styles -->
    <style name="CozyText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/icecream_text_dark</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="CozyText.Title">
        <item name="android:textColor">@color/icecream_text_warm</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="CozyText.Subtitle">
        <item name="android:textColor">@color/icecream_text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="CozyText.Body">
        <item name="android:textColor">@color/icecream_text_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="CozyText.Price">
        <item name="android:textColor">@color/icecream_accent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Cozy Input Style -->
    <style name="CozyTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxStrokeColor">@color/icecream_primary</item>
        <item name="hintTextColor">@color/icecream_text_secondary</item>
        <item name="boxBackgroundColor">@color/icecream_surface</item>
    </style>
</resources>
