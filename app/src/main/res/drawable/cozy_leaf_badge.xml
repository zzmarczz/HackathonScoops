<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Leaf-shaped badge background -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/icecream_leaf_green"/>
            <size
                android:width="48dp"
                android:height="48dp"/>
        </shape>
    </item>
    <item
        android:top="2dp"
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp">
        <shape android:shape="oval">
            <solid android:color="@color/icecream_grass"/>
        </shape>
    </item>
</layer-list>


