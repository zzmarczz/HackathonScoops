<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer ring with soft shadow effect -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/icecream_sand"/>
        </shape>
    </item>
    <!-- Inner cream circle -->
    <item
        android:top="3dp"
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp">
        <shape android:shape="oval">
            <solid android:color="@color/icecream_card_bg"/>
        </shape>
    </item>
</layer-list>
