<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Wooden board style banner -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/icecream_wood"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
    <item
        android:top="3dp"
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/icecream_sand"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
</layer-list>


