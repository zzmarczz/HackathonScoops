<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/icecream_background">

    <!-- Cozy Empty Cart View -->
    <LinearLayout
        android:id="@+id/layoutEmptyCart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <!-- Decorative clouds -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â˜ï¸"
                android:textSize="24sp"
                android:alpha="0.5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â˜ï¸"
                android:textSize="16sp"
                android:layout_marginStart="30dp"
                android:alpha="0.4"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ›’ðŸƒ"
            android:textSize="64sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your cart is empty!"
            android:textColor="@color/icecream_text_warm"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time to add some tasty treats~"
            android:textColor="@color/icecream_text_secondary"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_marginTop="8dp"/>

        <!-- Decorative leaves -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŒ¸"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸƒ"
                android:textSize="18sp"
                android:layout_marginStart="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŒ¸"
                android:textSize="16sp"
                android:layout_marginStart="12dp"/>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinueShopping"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Browse Flavors ðŸ¦"
            android:textSize="14sp"
            android:textColor="@color/icecream_text_light"
            android:layout_marginTop="28dp"
            app:backgroundTint="@color/icecream_primary"
            app:strokeWidth="2dp"
            app:strokeColor="@color/icecream_primary_dark"
            app:cornerRadius="24dp"
            style="@style/Widget.MaterialComponents.Button"/>

    </LinearLayout>

    <!-- Cart Content View -->
    <LinearLayout
        android:id="@+id/layoutCartContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <!-- Cart Items List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:clipToPadding="false"
            tools:listitem="@layout/item_cart"/>

        <!-- Cozy Order Summary Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="28dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/icecream_surface"
            app:strokeWidth="2dp"
            app:strokeColor="@color/icecream_sand">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Header with decorative elements -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“‹"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Order Summary"
                        android:textColor="@color/icecream_text_warm"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸƒ"
                        android:textSize="16sp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/icecream_sand"
                    android:layout_marginVertical="14dp"/>

                <!-- Subtotal -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Subtotal"
                        android:textColor="@color/icecream_text_secondary"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/txtSubtotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/icecream_text_dark"
                        android:textSize="14sp"
                        tools:text="$15.47"/>

                </LinearLayout>

                <!-- Tax -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Island Tax (8%)"
                        android:textColor="@color/icecream_text_secondary"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/txtTax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/icecream_text_dark"
                        android:textSize="14sp"
                        tools:text="$1.24"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/icecream_sand"
                    android:layout_marginVertical="14dp"/>

                <!-- Total with bell bag icon -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ’°"
                            android:textSize="18sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total"
                            android:textColor="@color/icecream_text_warm"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginStart="6dp"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/icecream_accent"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        tools:text="$16.71"/>

                </LinearLayout>

                <!-- Cozy Checkout Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCheckout"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Checkout ðŸ›’"
                    android:textSize="16sp"
                    android:textColor="@color/icecream_text_light"
                    android:layout_marginTop="18dp"
                    app:backgroundTint="@color/icecream_accent"
                    app:strokeWidth="3dp"
                    app:strokeColor="@color/icecream_accent_dark"
                    app:cornerRadius="28dp"
                    app:icon="@drawable/ic_checkout"
                    app:iconGravity="end"
                    app:iconTint="@color/icecream_text_light"
                    style="@style/Widget.MaterialComponents.Button"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
